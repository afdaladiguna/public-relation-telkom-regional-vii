<% layout('layouts/boilerplate') %>

    <div class="container d-flex justify-content-center align-items-center mt-2 mb-3">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://res.cloudinary.com/depkm8h6l/image/upload/f_auto,q_auto/v1/fikom-showcase/logo-fikom"
                        alt="" class="card-img-top p-5 bg-secondary" />
                    <div class="card-body w-100">
                        <h5 class="card-title text-center">Login</h5>
                        <form action="/login" method="POST" class="validated-form needs-validation" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus
                                    required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                            </div>
                            <button class="btn btn-success btn-block">Login</button>
                        </form>
                        <p class="mt-3 mb-0">Belum punya akun? <a href="/register">Register</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>