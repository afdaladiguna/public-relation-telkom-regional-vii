<!-- views/users/index.ejs -->
<% layout('layouts/boilerplate') %>
  <div class="container mt-3">
    <h1 class="mb-4">User Management</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Name</th>
          <th>Admin</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user=> { %>
          <tr>
            <td>
              <%= user.username %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= user.admin ? 'Yes' : 'No' %>
            </td>
            <td>
              <% if (user._id.toString() !==currentUser._id.toString()) { %>
                <a href="/management/user/<%= user._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                <form action="/management/user/<%= user._id %>?_method=DELETE" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
                <% } else { %>
                  <button class="btn btn-warning btn-sm" disabled>Edit</button>
                  <button class="btn btn-danger btn-sm" disabled>Delete</button>
                  <% } %>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>