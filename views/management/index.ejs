<% layout('layouts/boilerplate.ejs') %>
  <main class="container mt-3">
    <div class="row">
      <div class="d-flex justify-content-between">
        <h1 class="fs-4 fw-bold">Management</h1>
        <div>
          <a href="/management/news/write" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#fff" class="bi bi-plus-lg me-2"
              viewBox="0 1 16 16">
              <path fill-rule="evenodd"
                d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
            </svg>Add
          </a>
          <button id="export-button" class="btn btn-success ms-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#fff"
              class="bi bi-file-earmark-excel-fill me-2" viewBox="0 0 16 16">
              <path
                d="M6 6.882v6.226L4.291 9.506 6 6.882zM2 14V6l4.432 6.432L6 8.176v7.56L2 14zm1-.875 1.235.541L6 14l2-5.529-1.106-1.014L6 13.122v-6.41L3 13.125zM5.354 5.146 6.5 7.085 7.646 5.146h.813L8 6.465 7.793 7H8v-.002L8 7h1.793L8.5 8.293 8 9.706 8 7h-1v.707L6.5 8.293 5.646 7h1.207L7 6.294h-1l.146-.146H6l.5 1.085.5-.854L5.354 5.146z" />
            </svg>Export to Excel
          </button>
        </div>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col">
        <input type="text" id="filter-category" placeholder="Filter by Category" class="form-control">
      </div>
      <div class="col">
        <select id="sort-by" class="form-select">
          <option value="createdAt">Sort by Date (Newest)</option>
          <option value="updatedAt">Sort by Last Updated (Newest)</option>
          <!-- Add more options for other columns -->
        </select>
      </div>
    </div>


    <table class="table mt-4" id="news-table">
      <thead>
        <tr>
          <th scope="col">News</th>
          <th scope="col">Writer</th>
          <th scope="col">Date</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% news.forEach(item=> { %>
          <tr>
            <td class="col-5">
              <div class="mt-2 mb-3">
                <span class="badge text-bg-light border border-2">
                  <% function capitalizeFirstLetter(string) { return string.charAt(0).toUpperCase() + string.slice(1); }
                    %>
                    <%= capitalizeFirstLetter(item.category) %>
                </span></h1>
              </div>
              <a class="text-black d-block w-100" href="/news/<%= item.id %>">
                <%= item.title %>
              </a>
              <p class="text-secondary my-2">TELKOM REGIONAL VII KTI &bull; WITEL MAKASSAR</p>
            </td>
            <td class="align-middle">
              <p class="mb-0">Written by</p>
              <p class="text-secondary">
                <%= item.author.name %>
              </p>
            </td>
            <td class="align-middle">
              <div class="mt-1">
                <p class="mb-0">Submitted Date</p>
                <p class="text-secondary">
                  <%= item.createdAt.toLocaleString('en-GB') %>
                </p>
              </div>
              <div class="mb-1">
                <p class="mb-0">Last Updated</p>
                <p class="text-secondary mb-0">
                  <%= item.updatedAt.toLocaleString('en-GB') %>
                </p>
              </div>
            </td>
            <td class="border-top align-middle">
              <div class="dropdown">
                <button class="btn border-0" data-bs-toggle="dropdown" aria-expanded="false">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                    class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                    <path
                      d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
                  </svg>
                </button>
                <ul class="dropdown-menu">
                  <li>
                    <a class="dropdown-item border-bottom mb-2" href="/management/news/<%= item.id %>/edit">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-pencil-square me-2" viewBox="0 0 16 16">
                        <path
                          d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd"
                          d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                      </svg>Edit
                    </a>
                  </li>
                  <li>
                    <!-- Button trigger modal -->
                    <button type="button" class="dropdown-item text-danger" data-bs-toggle="modal"
                      data-bs-target="#deleteConfirmationModal<%= item.id %>">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-x-square me-2" viewBox="0 0 16 16">
                        <path
                          d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                        <path
                          d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                      </svg>Delete
                    </button>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
          <!-- Modal for Delete Confirmation -->
          <div class="modal fade" id="deleteConfirmationModal<%= item.id %>" tabindex="-1"
            aria-labelledby="deleteConfirmationModalLabel<%= item.id %>" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="deleteConfirmationModalLabel<%= item.id %>">Confirm Delete</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  Are you sure you want to delete "<%= item.title %>"?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <!-- Form for actual deletion -->
                  <form class="d-inline" action="/management/news/<%= item.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
      </tbody>
    </table>
  </main>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>
  <script>
    document.getElementById('export-button').addEventListener('click', () => {
      const table = document.getElementById('news-table');
      console.log('table: ', table)
      const ws = XLSX.utils.table_to_sheet(table);
      console.log('ws: ', ws)
      const wb = XLSX.utils.book_new();
      console.log('wb: ', wb)
      XLSX.utils.book_append_sheet(wb, ws, `RegionalVII_News_${Date.now()}`);
      XLSX.writeFile(wb, `RegionalVII_News_${Date.now()}.xlsx`);
    });

    // Filter function
    function filterTable() {
      const filterCategory = document.getElementById('filter-category').value.toUpperCase();

      const table = document.getElementById('news-table');
      const rows = table.getElementsByTagName('tr');

      for (let i = 0; i < rows.length; i++) {
        const categoryCell = rows[i].querySelector('.badge');
        if (categoryCell) {
          const categoryText = categoryCell.textContent.toUpperCase();
          if (categoryText.indexOf(filterCategory) > -1) {
            rows[i].style.display = '';
          } else {
            rows[i].style.display = 'none';
          }
        }
      }
    }

    // Sort function
    function sortTable() {
      const sortBy = document.getElementById('sort-by').value;
      const table = document.getElementById('news-table');
      const rows = Array.from(table.rows).slice(1); // Skip header row

      rows.sort((rowA, rowB) => {
        const cellA = rowA.cells[sortBy === 'createdAt' ? 2 : 3].innerText; // Adjust index based on column
        const cellB = rowB.cells[sortBy === 'createdAt' ? 2 : 3].innerText;

        if (sortBy === 'createdAt' || sortBy === 'updatedAt') {
          return new Date(cellB) - new Date(cellA); // Date sorting
        } else {
          return cellA.localeCompare(cellB); // Text sorting
        }
      });

      // Re-append sorted rows to table
      rows.forEach(row => {
        table.appendChild(row);
      });
    }

    // Event listeners for filter and sort
    document.getElementById('filter-category').addEventListener('input', filterTable);
    document.getElementById('sort-by').addEventListener('change', sortTable);

  </script>