<% layout('layouts/boilerplate.ejs') %>

  <div class="container mt-4">
    <div class="row">
      <div class="col-md-9">
        <div class="d-flex align-items-center mb-4">
          <a href="/management/news" class="btn btn-outline-primary me-3">Back</a>
          <p class="article-meta text-muted mb-0">
            <%= news.createdAt %>
          </p>
        </div>

        <div class="article-header mb-4 pb-2 border-bottom">
          <h1 class="article-title">
            <%= news.title %>
          </h1>
          <p class="article-meta text-muted">
            by <%= news.author %>
          </p>
        </div>

        <div class="article-body">
          <div class="mb-4">
            <%- news.body %>
          </div>
          <p class="article-meta text-muted">
            Category: <%= news.category %>
          </p>
          <% if (news.images && news.images.length) { %>
            <img src="<%= news.images[0] %>" class="img-fluid mb-4" alt="">
            <% } %>
        </div>
      </div>

      <div class="col-md-3 article-sidebar">
        <h5 class="mb-4">Popular News</h5>
        <ul class="list-group">
          <li class="list-group-item">Berita 1</li>
          <li class="list-group-item">Berita 2</li>
          <li class="list-group-item">Berita 3</li>
          <li class="list-group-item">Berita 4</li>
          <li class="list-group-item">Berita 5</li>
        </ul>
      </div>
    </div>

    <% if (news.images && news.images.length> 1) { %>
      <div class="row mt-4">
        <div class="col-12">
          <div id="newsCarousel" class="carousel slide">
            <div class="carousel-inner">
              <% news.images.forEach((img, i)=> { %>
                <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                  <img crossorigin="anonymous" src="<%= img.url %>" class="d-block w-100" alt="...">
                </div>
                <% }) %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#newsCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#newsCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
      </div>
      <% } %>
  </div>

  <script>
    const news = <% - JSON.stringify(news) %>;
  </script>