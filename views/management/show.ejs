<head>
  <style>
    .carousel-control-prev,
    .carousel-control-next {
      width: 2em;
      font-size: 1.5rem;
      /* Adjust size */
      background-color: rgba(0, 0, 0, 0.5);
      /* Example background color */
      color: white;
      /* Example text color */
    }
  </style>
</head>
<% layout('layouts/boilerplate.ejs') %>

  <div class="container mt-4">
    <div class="row">
      <div class="col-md-9 pe-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <a href="/news" class="btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#000" class="bi bi-arrow-left me-2"
              viewBox="0 1 16 16">
              <path fill-rule="evenodd"
                d="M5.854 4.146a.5.5 0 0 0-.708 0L.146 9.146a.5.5 0 0 0 0 .708l5 5a.5.5 0 0 0 .708-.708L1.707 9.5H15.5a.5.5 0 0 0 0-1H1.707l4.147-4.146a.5.5 0 0 0 0-.708z" />
            </svg>Back
          </a>
          <div class="d-flex align-items-center">
            <p class="article-meta text-muted mb-0 me-3">
              <%= new Date(news.createdAt).toLocaleDateString('en-GB', { year: 'numeric' , month: 'long' ,
                day: 'numeric' , }) %>
            </p>
          </div>
        </div>

        <div class="article-header mb-4 pb-2 border-bottom">
          <span class="badge bg-secondary mb-2">
            <% function capitalizeFirstLetter(string) { return string.charAt(0).toUpperCase() + string.slice(1); } %>
              <%= capitalizeFirstLetter(news.category) %>
          </span>
          <h1 class="article-title fw-bold">
            <%= news.title %>
          </h1>
          <p class="article-meta text-muted">
            by <%= news.author.name %>
          </p>
        </div>

        <% if (news.images && news.images.length>= 1) { %>
          <div class="row mt-4">
            <div class="col-12 mb-4">
              <div id="newsCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                  <% news.images.forEach((img, i)=> { %>
                    <button type="button" data-bs-target="#newsCarousel" data-bs-slide-to="<%= i %>"
                      class="<%= i === 0 ? 'active' : '' %>" aria-current="<%= i === 0 ? 'true' : 'false' %>"
                      aria-label="Slide <%= i + 1 %>"></button>
                    <% }) %>
                </div>
                <div class="carousel-inner">
                  <% news.images.forEach((img, i)=> { %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                      <img crossorigin="anonymous" src="<%= img.url %>" class="d-block w-100" alt="<%= news.title %>">
                    </div>
                    <% }) %>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#newsCarousel" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#newsCarousel" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
          </div>
          <% } %>

            <div class="article-body">
              <div class="mb-4">
                <%- news.body %>
              </div>
            </div>
      </div>

      <div class="col-md-3 article-sidebar">
        <h5 class="mb-4">Popular News</h5>
        <div class="list-group">
          <a href="/news/1" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 align-items-center">
              <img src="https://via.placeholder.com/50" alt="Berita 1" class="img-fluid me-3"
                style="width: 50px; height: 50px; object-fit: cover;">
              <div>
                <h6 class="mb-1 fw-bold">Berita 1</h6>
                <small class="text-muted">15 Jul 2023</small>
              </div>
            </div>
          </a>
          <a href="/news/2" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 align-items-center">
              <img src="https://via.placeholder.com/50" alt="Berita 2" class="img-fluid me-3"
                style="width: 50px; height: 50px; object-fit: cover;">
              <div>
                <h6 class="mb-1 fw-bold">Berita 2</h6>
                <small class="text-muted">10 Jul 2023</small>
              </div>
            </div>
          </a>
          <a href="/news/3" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 align-items-center">
              <img src="https://via.placeholder.com/50" alt="Berita 3" class="img-fluid me-3"
                style="width: 50px; height: 50px; object-fit: cover;">
              <div>
                <h6 class="mb-1 fw-bold">Berita 3</h6>
                <small class="text-muted">05 Jul 2023</small>
              </div>
            </div>
          </a>
          <a href="/news/4" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 align-items-center">
              <img src="https://via.placeholder.com/50" alt="Berita 4" class="img-fluid me-3"
                style="width: 50px; height: 50px; object-fit: cover;">
              <div>
                <h6 class="mb-1 fw-bold">Berita 4</h6>
                <small class="text-muted">01 Jul 2023</small>
              </div>
            </div>
          </a>
          <a href="/news/5" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 align-items-center">
              <img src="https://via.placeholder.com/50" alt="Berita 5" class="img-fluid me-3"
                style="width: 50px; height: 50px; object-fit: cover;">
              <div>
                <h6 class="mb-1 fw-bold">Berita 5</h6>
                <small class="text-muted">25 Jun 2023</small>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    const news = <% - JSON.stringify(news) %>;
  </script>

